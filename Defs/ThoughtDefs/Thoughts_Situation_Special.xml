<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>Thought_EffectRadio</defName>
    <workerClass>AOMoreFurniture.ThoughtWorker_RadioBase</workerClass>
    <effectMultiplyingStat>AO_MusicHearingAbility</effectMultiplyingStat>
    <stages>
      <li>
        <label>ambient music</label>
        <description>I somewhat like the music being played, albeit the signal is terrible.</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
      <li>
        <label>ambient music</label>
        <description>I like the music being played, it's quite calming.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

   <StatDef>
    <defName>AO_MusicHearingAbility</defName>
